@model _60331_1_Volodko.Models.Cart

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (TempData["removedСar"] != null)
    {
        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <script type="text/javascript">
            var val;

            $(function () {
                val = '@TempData["removedCar"]';
                swal("Удален из корзины", "@TempData["removedCar"]", "success");
            })
        </script>
    }
}


<h2>Ваша корзина</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Наименование</th>
            <th>Производитель</th>
            <th>Количество</th>
            <th>Общая цена</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetItems())
        {
            <tr>
                <td>@item.Sweet.SweetsName</td>
                <td>@item.Sweet.Manufacturer.ManufacturerName</td>
                <td>@item.Quantity</td>
                <td>@(item.Sweet.Cost * item.Quantity) $</td>
                <td>
                    <a href=@Url.Action("RemoveFromCart", "Cart", new {id=item.Sweet.SweetId, returnUrl=TempData["returnUrl"]} ) class="btn btn-danger">Удалить</a>
                </td>
            </tr>}
    </tbody>
</table>
<a href="@TempData["returnUrl"]" class="btn btn-default">Вернуться к меню</a>
